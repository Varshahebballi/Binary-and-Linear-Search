#include <iostream>
using namespace std;

int firstOccurrence(int arr[], int n, int target) {
    for (int i = 0; i < n; i++) {
        if (arr[i] == target) return i;
    }
    return -1; // Not found
}

int main() {
    int arr[] = {1, 2, 3, 2, 5};
    int target = 2;
    cout << "First Occurrence: Element found at index: " << firstOccurrence(arr, 5, target) << endl;
    return 0;
}
